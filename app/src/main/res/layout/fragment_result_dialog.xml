<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0">

            <ImageView
                android:id="@+id/imageBackgroundResult"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:background="@color/b3Yellow"
                android:scaleType="center" />

            <com.github.abdularis.civ.CircleImageView
                android:id="@+id/imageLogoResult"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/b3logo_yellow"
                app:strokeColor="@color/colorAccent" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textResult"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="@string/result_answer_correct_hint"
            android:textAlignment="center"
            android:textSize="24sp"
            android:gravity="center_vertical"
            android:textStyle="italic"
            android:padding="24dp"/>

        <Button
            android:id="@+id/confirmResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/continueButtonText"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>
</RelativeLayout>