<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <ImageView
            android:id="@+id/imageBackgroundResult"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:background="@color/b3Yellow"
            android:scaleType="center" />

        <com.github.abdularis.civ.CircleImageView
            android:id="@+id/imageLogoResult"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:src="@drawable/b3logo_yellow"
            app:strokeColor="@color/colorAccent" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="YOUR ANSWER IS CORRECT...."
        android:padding="64dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/confirmResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/continueButtonText"
        android:textColor="@color/colorWhite"
        android:textStyle="bold" />
</LinearLayout>